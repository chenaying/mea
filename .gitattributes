# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts always use LF
*.sh text eol=lf

# Python files use LF
*.py text eol=lf

# Markdown files use LF
*.md text eol=lf

# JSON files use LF
*.json text eol=lf

# YAML files use LF
*.yml text eol=lf
*.yaml text eol=lf

# Config files use LF
*.txt text eol=lf
*.cfg text eol=lf
*.conf text eol=lf

# Binary files
*.pt binary
*.pth binary
*.pkl binary
*.pickle binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary

